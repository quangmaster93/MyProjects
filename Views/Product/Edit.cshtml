@using DotNetNuke.Web.Mvc.Helpers
@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<MVCModule.Models.Product>

<div>
    <p class="alert alert-info">All fields are <strong>required</strong></p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p=>p.ProductId)
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", autofocus = true })
        @Html.ValidationMessageFor(p => p.Name)
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextBoxFor(p => p.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(p => p.Description)
    </div>
    <button type="submit" class="btn btn-primary" onclick="this.form.method='post'; this.form.action='@Url.Action("Edit","Product")';this.form.submit();">Save</button>
</div>

    













